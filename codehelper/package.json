{
  "name": "code-buddy",
  "displayName": "UofT Code Buddy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-buddy",
          "title": "UofT Code Buddy",
          "icon": "resources/robot-love.svg"
        }
      ]
    },
    "views": {
      "code-buddy": [
        {
          "id": "code-buddy.view",
          "name": "UofT Code Buddy",
          "icon": "resources/robot-love.svg",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "code-buddy.checkCompileErrors",
        "category": "UofT Code Buddy",
        "title": "Check Compile Errors"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "openai": "^4.7.0"
  }
}
